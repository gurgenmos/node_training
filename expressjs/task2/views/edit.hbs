<form class="row" method="post" action="/update/{{index}}">
    <div class="row">
        <div class="input-field col s6 offset-s3">
            <input type="text" name="todo" id="todo" class="validate" value="{{todo}}" required>
            <label for="todo">Todo</label>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s6 offset-s3">
            <button class="btn waves-effect waves-light" type="submit" name="action">Update</button>
        </div>
    </div>
</form>

{{#if error}}
    <p>{{error}}</p>
{{/if}}